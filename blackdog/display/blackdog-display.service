[Unit]
Description=Blackdog Display Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/blackdog
ExecStart=/opt/blackdog/venv/bin/flask --app /opt/blackdog/blackdog/display/server.py run --host 0.0.0.0 --port 8888
Restart=on-failure
Environment=VIRTUAL_ENV=/opt/blackdog/venv
Environment=PATH=$VIRTUAL_ENV/bin:$PATH

[Install]
WantedBy=multi-user.target
